{
    "name": "@jorgeferrero/stream-to-buffer",
    "version": "2.0.6",
    "description": "A promise based npm package that converts a node.js ReadStream to buffer",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "directories": {
        "lib": "lib",
        "test": "test"
    },
    "scripts": {
        "start": "npm run build && node dist/index.js",
