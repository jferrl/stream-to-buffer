        "url": "git+https://github.com/jferrl/stream-to-buffer.git"
    },
    "bugs": {
        "url": "https://github.com/jferrl/stream-to-buffer/issues"
    },
    "homepage": "https://github.com/jferrl/stream-to-buffer#readme",
    "devDependencies": {
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.5",
        "jest": "^26.0.1",
        "ts-jest": "^25.5.0",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.8.3"
